<h1><strong>Your movie list</strong></h1>

<div class="position-relative">
  <h2><%= @list.name %></h2>
</div>

<div class="container mb-5">

<h3>Bookmarks</h3>
  <% @list.bookmarks.each do |b|  %>
    <%= b.comment %>
  <%= link_to "delete this bookmark", bookmark_path(b), class: "btn btn-cancel", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this bookmark?" } %>
  <% end %>
</div>



<%= link_to 'Back to page', lists_path %>
<p><%= link_to 'add to your list', new_list_bookmark_path(@list) %></p>
