<div class="cover mb-4 d-flex align-items-center justify-content-center">
  <div class="text-center text-white">
    <h1 class="text-dark">Save any kind of movies</h1>
    <h3 class="typed-js" data-controller="typed-js"></h3>
  </div>
</div>
<div class="container py-5">
  <div class="d-flex align-items-center justify-content-between mb-3">
    <h3 class="mb-0">My Lists</h3>
    <%= link_to "Create a movie list", lists_new_path, class: "btn btn-flat" %>
  </div>
  <div class="row">
    <% @lists.each do |list| %>
      <div class="d-flex co-12 col-sm-6 col-md-4 m-3 border border-dark rounded justify-content-between">
        <%= link_to list_path(list), class:"text-decoration-none" do %>
          <%= list.name %>
        <% end %>
        <%= link_to 'Delete this List', list_path(list), class: "btn btn-cancel", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this list?" } %>
      </div>
    <% end %>
  </div>
</div>
